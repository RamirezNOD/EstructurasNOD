index = 0
maxIndex = 0

class Queue:
    
    def __init__(self):
        self.queue = []
            
    def create(self):
        global maxIndex
        for i in range (0, maxIndex):
                self.queue.append(0)
        
    def add(self, dato):
        global index 
        global maxindex
        if index < maxIndex:
            self.queue[index] = dato
            index += 1
        else:
            print("Cola llena.")
            
    def remove(self):
        global maxIndex
        global index
        print ("Se ha eliminado: " + str(self.queue[index - 1]))
        for i in range (0, maxIndex - 1):
            self.queue[i] = self.queue[i+1]
        self.queue[maxIndex - 1] = 0
        if index != 0:
            index -= 1
        
    def showAll(self):
        print (self.queue)

    def firstElement(self):
        global maxIndex
        print (self.queue[0])
        
    def lastElement(self):
        print (self.queue[maxIndex - 1])
        
    def element(self, elemento):
        global maxIndex
        encontrado = 'Encontrado en: '
        for i in range (0, maxIndex):
            if (str(self.queue[i]) == str(elemento)):
                encontrado += '['+str(i)+'] '        
        if (encontrado == 'Encontrado en: '):
            print("No existe")
        else:
            print (encontrado)        
    

cola = Queue()
opcion = 0

maxIndex = int(input("Ingrese numero de indices: "))
cola.create()

while (opcion != 5):
    opcion = int(input("\n\nOpcion a realizar: \n\t 1)Ingresar elemento\n\t 2)Remover\n\t 3)Buscar Elemento\n\t 5)Salir \t\t"))
    if opcion == 1:
        cola.add(input("Ingresa elemento ["+str(index)+"]: "))
    else: 
        if opcion == 2:
            cola.remove()
        else:
            if opcion == 3:
                opcion = int(input("\n\n\tBuscar elemento: \n\t\t 1)Primero de la cola\n\t\t 2)Ultimo de la cola\n\t\t 3)Buscar Elemento\n\t\t 4)Mostrar todos\n\t\t 5)Salir \t\t\t"))
                if opcion == 1:
                    cola.firstElement()
                else:
                    if opcion == 2:
                        cola.lastElement()
                    else:
                        if opcion == 3:
                            cola.element(input("\t\t\tElemento a buscar: "))
                        else:
                            if opcion == 4:
                                cola.showAll()
                            else:
                                if opcion != 5:
                                    print("Opcion invalida.")
            else: 
                if opcion != 5:
                        print("Ingrese opcion valida")
            
print("Adios.") 
