
class Nodo(object):
    
    def __init__(self, data):
        self.data = data
        self.next = None
        
    def push(self, r):        
        global ultimoNodo
        if r.next != None:
            r.next = self
        else:
            
            
        self.next = sigNodo
        
            
   

opcion = 0
r = Nodo("<Raiz>")
sigNodo = Nodo(".")

while opcion != 5:
    opcion = input("MENU:\n\t1)Agregar Nodo  ")
    if opcion == 1:
        miNodo = Nodo(input("Nuevo nodo: "))
        miNodo.push(r)
    else: 
        if opcion == 5:
            print "Goodbye :)"
        else:
            print("Ingresa una opcion valida")
            
            
            
