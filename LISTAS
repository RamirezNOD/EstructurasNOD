
class Nodo(object):
    
    def __init__(self, data):
        self.data = data
        self.next = None
   

miNodo = Nodo
arregloNodos = []
opcion = 0

while opcion != 5:
    opcion = input("MENU:\n\t1)Agregar Nodo  ")
    if opcion == 1:
        miNodo = Nodo(input("Wea: "))
        if (len(arregloNodos) != 0):
            miNodo.next = arregloNodos[len(arregloNodos)-1]
        arregloNodos.append(miNodo)
        
        
    else: 
        if opcion == 5:
            print "Goodbye :)"
        else:
            print("Ingresa una opcion valida")
         

