index = 0
elementos = 0
maxElem = 0

class Queue:    
    def __init__(self):
        self.queue = []
            
    def create(self):
        global maxElem
        for i in range (0, maxElem):                    
            self.queue.append(0)
        
    def add (self, dato):
        global index, elementos, maxElem
        if elementos < maxElem:             
            self.queue[elementos] = dato
            elementos += 1
        else:
             print("Cola llena.")   
        print self.queue

    def remove(self):                                                
        global index, maxElem, elementos
        print ("Se ha eliminado: " + str(self.queue[index]))
        self.queue[index] = 0
        if index < maxElem - 1:
            index += 1
            elementos -= 1
        else:
            index = 0
        print self.queue
    
cola = Queue()
opcion = 0

maxElem = int(input("Ingrese numero de indices: "))      
cola.create()

while (opcion != 5):                                      
    opcion = int(input("\n\nOpcion a realizar: \n\t 1)Ingresar elemento\n\t 2)Eliminar elemento\n\t 5)Salir \n\t\t"))   
    if opcion == 1:
        cola.add(input("Ingresa elemento: "))
    else:
        if opcion == 2:
            cola.remove()
        else:
            if opcion != 5:
                print("Ingrese opcion valida")
  
print("Adios.") 
